datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Quiz {
  id        Int       @id @default(autoincrement())
  title     String
  questions Question[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Question {
  id       Int      @id @default(autoincrement())
  quizId   Int
  quiz     Quiz     @relation(fields: [quizId], references: [id], onDelete: Cascade)
  type     String
  question String
  options  String[]
  answers  String[]
  order    Int
}
